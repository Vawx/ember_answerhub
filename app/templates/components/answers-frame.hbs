{{yield}}

<div class="row" style="padding-top:42px;">
  <div class="col-xs-6 col-xs-offset-3">
    <h3>Answers</h3>
    <div class="well">
      {{#if showEditAnswer}}
      <div class="row">
        <div class="col-xs-4 col-xs-offset-1">
          <div class="form-group">
            <label for="">Answer<span style="padding-left:26em;"><span class="btn btn-danger" {{action 'clearFieldsAndReset'}}>x</span></span></label>
            <div class="form-group">
              {{textarea cols="55" rows="3" value=answerEditDetails id="answerEditDetails"}}
            </div>
          </div>
          <div class="form-group" style="padding-left:25em;">
            <span class="btn btn-info" {{action 'saveEditAnswer' answer}}>Save</span>
          </div>
        </div>
      </div>
      {{/if}}
      <div class="container">
        <ul>
        {{#each question.answers as |answer|}}
          <li>
            <div class="container">
              <span class="label label-default">{{answer.author}}</span>
              <div class="container">
                <p>{{answer.content}}</p>
              </div>
              <div class="col-xs-6 col-xs-offset-8">
                  <a href="#"{{ action 'editAnswer' answer }}><span class="label label-warning">Edit</span></a>
              </div>
            </div>
          </li>
        {{/each}}
      </ul>
      </div>
    </div>
  </div>
</div>
