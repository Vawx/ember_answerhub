{{yield}}

<div class="col-xs-1 col-xs-offset-2">
  <div class="" style="margin-top:8em; margin-left:5em;">
    <span class="glyphicon glyphicon glyphicon-chevron-up" aria-hidden="true" {{action 'upvote' question}}></span>
    <span class="glyphicon glyphicon glyphicon-chevron-down" aria-hidden="true" {{action 'downvote' question}}></span>
    <span>{{question.votes}}</span>
  </div>
</div>

<div class="col-xs-6">
  <label for="" style="padding-right:6px;">{{question.author}}</label> <a href="#">{{#link-to 'question' question.id}}<label for="" id="questionContent">{{question.content}}</label>{{/link-to}}</a>

  <div class="row">
    <div class="col-xs-6">
      {{#if showEditQuestionArea}}
        <div class="well">
          <div class="form-group">
            <label for="">Question<span style="padding-left:22em;"><span class="btn btn-danger" {{action 'clearFieldsAndReset'}}>x</span></span></label>
            <div class="form-group">
              {{input value=questionEdit id="questionEdit"}}
            </div>
          </div>
          <label for="">Details</label>
          <div class="form-group">
            {{textarea cols="55" rows="3" value=questionEditDetails id="questionEditDetails"}}
          </div>
          <div class="form-group" style="padding-left:25em;">
            <span class="btn btn-info" {{action 'saveEditQuestion' question}}>Save</span>
          </div>
        </div>
      {{/if}}
    </div>
  </div>

  {{#if showEditQuestion}}
    <a href="#"{{action 'editQuestion' question}}><span class="label label-warning">Edit</span></a>
  {{/if}}
  <div class="well" id="questionNotes">
    {{question.notes}}
  </div>
</div>

{{#if showAnswerButton}}
  <div class="row">
    <div class="col-xs-2 col-xs-offset-8">
      <button class="btn btn-primary" {{action 'answerButtonClicked'}}>Answer</button>
    </div>
  </div>
{{/if}}

{{#if showAnswerArea}}
  <div class="row">
    <div class="col-xs-6 col-xs-offset-4">
      <div class="row">
        <label for="author" style="padding-left:15px;">User Name
        <span style="padding-left:32em;"><span class="btn btn-danger" {{action 'clearFieldsAndReset'}}>x</span></span></label>
        <div class="row" style="padding-left:30px; padding-bottom:4px;">
          {{input value=author id="author"}}
        </div>
      </div>
      {{textarea cols="80" rows="6" value=content id="content"}}
    </div>
  </div>
  <div class="row">
    <div class="col-xs-2 col-xs-offset-7">
      <button class="btn btn-info" {{action 'submitAnswer'}}>Submit</button>
    </div>
  </div>
{{/if}}
